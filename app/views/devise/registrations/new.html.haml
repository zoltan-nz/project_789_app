%h2 Sign up

= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-brand form-horizontal'} do |f|
  = devise_error_messages!
  .form-group
    = f.label :email, 'Email: ', class: 'col-sm-2 control-label'
    .col-sm-5
      = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'
  .form-group
    = f.label :password, 'Password: ', class: 'col-sm-2 control-label'
    .col-sm-5
      = f.password_field :password, autocomplete: 'off', placeholder: 'Password', class:'form-control'
  .form-group
    = f.label :password_confirmation, 'Password confirmation: ', class: 'col-sm-2 control-label'
    .col-sm-5
      = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-5
      = f.submit 'Sign up', class: 'btn btn-link'
